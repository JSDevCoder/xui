{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app",
				"app-plus": {
					// #ifdef APP-PLUS
					"subNVues": [{
						"id": "navBar",
						"path": "/components/nvue/nav-bar.nvue",
						"type": "navigationBar"
					}, {
						"id": "pop",
						"path": "/components/nvue/side-bar.nvue",
						"type": "popup",
						"style": {
							"zindex": 9999
						}
					}, {
						"id": "loading",
						"type": "popup",
						"path": "/components/nvue/loading",
						"style": {
							"width": "80px",
							"height": "80px",
							"margin": "auto"
						}
					}],
					// #endif
					
					"titleNView": false
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
